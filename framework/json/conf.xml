<configuration>
	<!-- 
	fileSet tag contains operations additional files that are needed for the software simulation 
	of a specific microprocessor
	-->
	<fileSet>
		<file name="8051" inputFile="/home/cerbero/mipsc/8051.h">cp includes/</file>
		<file name="Leon3" inputFile="/home/cerbero/mipsc/tsim_cmd">cp includes/</file>
	</fileSet>
	<!-- 
	The commandSet tag contains the list of commands executed for the simulation 
	The dependencies tag must be specified, defines the order in which the commands must be executed. 
	-->
	<commandSet name="profiling"> 
		<compiler inputFile="prova.c" outputFile="-o prova">gcc -fprofile-arcs -ftest-coverage -Iincludes/</compiler>
		<gcov inputFile="prova">gcov</gcov>
		<exec inputFile="/home/cerbero/Desktop/xml/prova/prova"></exec>
		<dependencies>compiler exec gcov</dependencies>
	</commandSet>
	<commandSet type="micro" name="8051"> 
		<iss inputFile="program.hex" outputFile="simStats.txt">isasim</iss>
		<compiler inputFile="prova.c">sdcc -mmcs51 --iram-size 128</compiler>
		<packihx inputFile="prova.ihx" outputFile="program.hex">packihx</packihx>
		<dependencies>compiler packihx iss</dependencies>
	</commandSet> 
	<commandSet type="micro" name="atmega328"> 
		<iss inputFile="-f prova" outputFile="simStats.txt">simulavr -d atmega328 -T exit</iss>
		<compiler inputFile="prova.c" outputFile="-o prova">avr-gcc -g -mmcu=atmega329</compiler>
		<dependencies>compiler iss</dependencies>
	</commandSet>
	<commandSet type="micro" name="Leon3">
		<iss inputFile="prova" outputFile="simStats.txt">tsim-leon3 -c includes/tsim_cmd</iss>
		<compiler inputFile="prova.c" outputFile="-o prova">sparc-gaisler-elf-gcc -o0</compiler>
		<dependencies>compiler iss</dependencies>
	</commandSet>
	 
</configuration>